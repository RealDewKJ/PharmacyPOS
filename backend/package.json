{
    "name": "pharmacy-pos-backend",
    "version": "1.0.0",
    "description": "Pharmacy POS Backend API",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate deploy",
        "db:seed": "bun run src/database/seed.ts",
        "db:studio": "prisma studio",
        "postinstall": "prisma generate",
        "db:dev:push": "prisma db push --schema=./prisma/schema.prisma --force-reset",
        "db:dev:studio": "prisma studio --schema=./prisma/schema.prisma",
        "db:prod:generate": "prisma generate --schema=./prisma/schema.postgresql.prisma",
        "db:prod:migrate": "prisma migrate deploy --schema=./prisma/schema.postgresql.prisma",
        "db:prod:studio": "prisma studio --schema=./prisma/schema.postgresql.prisma"
    },
    "dependencies": {
        "@elysiajs/cors": "^0.8.0",
        "@elysiajs/eden": "^1.4.1",
        "@elysiajs/jwt": "^0.8.0",
        "@elysiajs/swagger": "^0.8.5",
        "@prisma/client": "^5.7.0",
        "argon2": "^0.31.2",
        "bcryptjs": "^2.4.3",
        "dotenv": "^17.2.2",
        "elysia": "^0.8.17",
        "elysia-rate-limit": "^4.4.0",
        "redis": "^5.8.2",
        "validator": "^13.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^20.19.13",
        "@types/validator": "^13.11.7",
        "bun-types": "latest",
        "prisma": "^5.7.0"
    },
    "peerDependencies": {
        "typescript": "^5.3.0"
    },
    "prisma": {
        "seed": "bun run src/database/seed.ts"
    }
}